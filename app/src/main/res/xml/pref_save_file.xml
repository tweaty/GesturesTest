<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="key_format"
        android:title="@string/pref_format_title"
        android:defaultValue="0"
        android:entries="@array/pref_format_entries"
        android:entryValues="@array/pref_format_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <EditTextPreference
        android:key="key_email"
        android:title="@string/pref_email_title"
        android:defaultValue="test@test.pl"
        android:selectAllOnFocus="true"
        android:inputType="textEmailAddress"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
